/* To learn more about Typescript configuration file: https://www.typescriptlang.org/docs/handbook/tsconfig-json.html. */
/* To learn more about Angular compiler options: https://angular.dev/reference/configs/angular-compiler-options. */
{
  "compileOnSave": false,
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "sourceMap": false,
    "target": "ES2023",
    "module": "preserve",
    "baseUrl": "./",
    "paths": {
      // CDT
      "@cdt/domain/*": ["projects/cdt/src/app/domain/*"],
      "@cdt/application/*": ["projects/cdt/src/app/application/*"],
      "@cdt/ui/*": ["projects/cdt/src/app/ui/*"],
      "@cdt/infrastructure/*": ["projects/cdt/src/app/infrastructure/*"],
      "@cdt/environments/*": ["projects/cdt/src/environments/*"],
      "@cdt/config/*": ["projects/cdt/src/app/config/*"],
      // FIC
      "@fic/domain/*": ["projects/fic/src/app/domain/*"],
      "@fic/application/*": ["projects/fic/src/app/application/*"],
      "@fic/ui/*": ["projects/fic/src/app/ui/*"],
      "@fic/infrastructure/*": ["projects/fic/src/app/infrastructure/*"],
      "@fic/environments/*": ["projects/fic/src/environments/*"],
      "@fic/config/*": ["projects/fic/src/app/config/*"],
      // Pocket
      "@pocket/domain/*": ["projects/pocket/src/app/domain/*"],
      "@pocket/application/*": ["projects/pocket/src/app/application/*"],
      "@pocket/ui/*": ["projects/pocket/src/app/ui/*"],
      "@pocket/infrastructure/*": ["projects/pocket/src/app/infrastructure/*"],
      "@pocket/environments/*": ["projects/pocket/src/environments/*"],
      "@pocket/config/*": ["projects/pocket/src/app/config/*"],
      // LIB
      "invest-web-lib": ["projects/invest-web-lib/src/public-api.ts"]
    }
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "typeCheckHostBindings": true,
    "strictTemplates": true
  },
  "files": [],
  "references": [
    {
      "path": "./projects/shell/tsconfig.app.json"
    },
    {
      "path": "./projects/shell/tsconfig.spec.json"
    },
    {
      "path": "./projects/home/tsconfig.app.json"
    },
    {
      "path": "./projects/home/tsconfig.spec.json"
    },
    {
      "path": "./projects/cdt/tsconfig.app.json"
    },
    {
      "path": "./projects/cdt/tsconfig.spec.json"
    },
    {
      "path": "./projects/fic/tsconfig.app.json"
    },
    {
      "path": "./projects/fic/tsconfig.spec.json"
    },
    {
      "path": "./projects/invest-web-lib/tsconfig.lib.json"
    },
    {
      "path": "./projects/invest-web-lib/tsconfig.spec.json"
    },
    {
      "path": "./projects/pocket/tsconfig.app.json"
    },
    {
      "path": "./projects/pocket/tsconfig.spec.json"
    }
  ]
}
