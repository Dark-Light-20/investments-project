/* To learn more about Typescript configuration file: https://www.typescriptlang.org/docs/handbook/tsconfig-json.html. */
/* To learn more about Angular compiler options: https://angular.dev/reference/configs/angular-compiler-options. */
{
  "compileOnSave": false,
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "ES2022",
    "module": "preserve",
    "baseUrl": "./",
    "paths": {
      "@cdt/domain/*": ["projects/cdt/src/app/domain/*"],
      "@cdt/application/*": ["projects/cdt/src/app/application/*"],
      "@cdt/ui/*": ["projects/cdt/src/app/ui/*"],
      "@cdt/infrastructure/*": ["projects/cdt/src/app/infrastructure/*"],
      "@cdt/environments/*": ["projects/cdt/src/environments/*"],
      "@cdt/config/*": ["projects/cdt/src/app/config/*"]
    }
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "typeCheckHostBindings": true,
    "strictTemplates": true
  },
  "files": [],
  "references": [
    {
      "path": "./projects/shell/tsconfig.app.json"
    },
    {
      "path": "./projects/shell/tsconfig.spec.json"
    },
    {
      "path": "./projects/home/tsconfig.app.json"
    },
    {
      "path": "./projects/home/tsconfig.spec.json"
    },
    {
      "path": "./projects/cdt/tsconfig.app.json"
    },
    {
      "path": "./projects/cdt/tsconfig.spec.json"
    }
  ]
}
